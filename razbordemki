    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è —á–∏—Å–µ–ª —Å —Ä–∞–∑–¥–µ–ª–∏—Ç–µ–ª—è–º–∏
            function formatNumber(number) {
                // –†–∞–∑–¥–µ–ª—è–µ–º —Ç—ã—Å—è—á–∏ –∑–∞–ø—è—Ç—ã–º–∏
                return number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ç–µ–º—ã
            const themeToggle = document.getElementById('themeToggle');
            const body = document.body;
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—É—é —Ç–µ–º—É –≤ localStorage
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                body.classList.add('dark-theme');
            }
            
            themeToggle.addEventListener('click', function() {
                body.classList.toggle('dark-theme');
                const isDarkTheme = body.classList.contains('dark-theme');
                localStorage.setItem('theme', isDarkTheme ? 'dark' : 'light');
            });
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤—ã–ø–∞–¥–∞—é—â–∏—Ö —Å–ø–∏—Å–∫–æ–≤ –¥–ª—è –¥–∞—Ç—ã
            const birthDaySelect = document.getElementById('birthDay');
            for (let day = 1; day <= 31; day++) {
                const option = document.createElement('option');
                option.value = day;
                option.textContent = day;
                birthDaySelect.appendChild(option);
            }
            
            // –ó–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –≥–æ–¥–æ–≤ (1900-—Ç–µ–∫—É—â–∏–π –≥–æ–¥)
            const birthYearSelect = document.getElementById('birthYear');
            const currentYear = new Date().getFullYear();
            for (let year = currentYear; year >= 1900; year--) {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = year;
                birthYearSelect.appendChild(option);
            }
            
            // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–µ–∫—É—â–µ–≥–æ –≥–æ–¥–∞ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é (2000)
            birthYearSelect.value = 2000;
            birthDaySelect.value = 1;
            document.getElementById('birthMonth').value = '1';
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ç–µ–∫—Å—Ç–∞ –ø—Ä–æ—Å—å–±—ã –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –∏–º–µ–Ω–∏/—Ñ–∞–º–∏–ª–∏–∏
            const firstNameInput = document.getElementById('firstName');
            const lastNameInput = document.getElementById('lastName');
            const requestText = document.getElementById('requestText');
            
            function updateRequestText() {
                const firstName = firstNameInput.value.trim();
                const lastName = lastNameInput.value.trim();
                
                if (firstName || lastName) {
                    requestText.placeholder = `–Ø (${firstName} ${lastName}) –ø—Ä–æ—à—É —Ä–∞–∑–æ–±—Ä–∞—Ç—å –¥–∞–Ω–Ω—ã–π –º–µ–º/—Å–∏—Ç—É–∞—Ü–∏—é.`;
                } else {
                    requestText.placeholder = ' ';
                }
            }
            
            firstNameInput.addEventListener('input', updateRequestText);
            lastNameInput.addEventListener('input', updateRequestText);
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è –∞–Ω–≥–ª–∏–π—Å–∫–∏—Ö –∏–º–µ–Ω
            function validateEnglishName(name) {
                return /^[a-zA-Z\s]+$/.test(name);
            }
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ–¥–∏–∞—Ñ–∞–π–ª–æ–≤
            const mediaContainer = document.getElementById('mediaContainer');
            const mediaFileInput = document.getElementById('mediaFile');
            const filePreviews = document.getElementById('filePreviews');
            const uploadBtn = document.getElementById('uploadBtn');
            
            let uploadedFiles = [];
            const MAX_FILES = 2;
            
            uploadBtn.addEventListener('click', function() {
                mediaFileInput.click();
            });
            
            mediaFileInput.addEventListener('change', function(e) {
                const files = Array.from(e.target.files);
                handleMediaFiles(files);
            });
            
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –º–µ–¥–∏–∞—Ñ–∞–π–ª–æ–≤
            function handleMediaFiles(files) {
                if (uploadedFiles.length + files.length > MAX_FILES) {
                    alert(`–ú–æ–∂–Ω–æ –∑–∞–≥—Ä—É–∑–∏—Ç—å –º–∞–∫—Å–∏–º—É–º ${MAX_FILES} —Ñ–∞–π–ª–∞(–æ–≤). –£ –≤–∞—Å —É–∂–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ: ${uploadedFiles.length}`);
                    return;
                }
                
                files.forEach(file => {
                    const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp', 'video/mp4', 'video/webm'];
                    if (!validTypes.includes(file.type)) {
                        alert(`–§–∞–π–ª "${file.name}" –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ (JPEG, PNG, GIF, WebP) –∏–ª–∏ –≤–∏–¥–µ–æ (MP4, WebM)`);
                        return;
                    }
                    
                    uploadedFiles.push(file);
                    createFilePreview(file);
                });
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–∫–æ–Ω–∫–∏
                if (uploadedFiles.length > 0) {
                    mediaContainer.querySelector('.media-icon').textContent = 'üìé';
                    mediaContainer.querySelector('.media-placeholder').textContent = `–ó–∞–≥—Ä—É–∂–µ–Ω–æ —Ñ–∞–π–ª–æ–≤: ${uploadedFiles.length}/${MAX_FILES}`;
                }
            }
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –ø—Ä–µ–≤—å—é —Ñ–∞–π–ª–∞
            function createFilePreview(file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.createElement('div');
                    preview.className = 'file-preview';
                    
                    if (file.type.startsWith('image/')) {
                        preview.innerHTML = `
                            <img src="${e.target.result}" alt="${file.name}">
                            <button class="remove-file" data-filename="${file.name}">&times;</button>
                        `;
                    } else if (file.type.startsWith('video/')) {
                        preview.innerHTML = `
                            <div style="width:100%; height:100%; background:#333; display:flex; align-items:center; justify-content:center; color:white;">
                                <i class="fas fa-video" style="font-size:24px;"></i>
                            </div>
                            <button class="remove-file" data-filename="${file.name}">&times;</button>
                        `;
                    }
                    
                    filePreviews.appendChild(preview);
                    
                    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —É–¥–∞–ª–µ–Ω–∏—è —Ñ–∞–π–ª–∞
                    preview.querySelector('.remove-file').addEventListener('click', function() {
                        const filename = this.getAttribute('data-filename');
                        uploadedFiles = uploadedFiles.filter(f => f.name !== filename);
                        preview.remove();
                        
                        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–∫–æ–Ω–∫–∏
                        if (uploadedFiles.length === 0) {
                            mediaContainer.querySelector('.media-icon').textContent = 'üìÅ';
                            mediaContainer.querySelector('.media-placeholder').textContent = '–ü–µ—Ä–µ—Ç–∞—â–∏—Ç–µ —Å—é–¥–∞ —Ñ–æ—Ç–æ –∏–ª–∏ –≤–∏–¥–µ–æ, –ª–∏–±–æ –Ω–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É';
                        } else {
                            mediaContainer.querySelector('.media-placeholder').textContent = `–ó–∞–≥—Ä—É–∂–µ–Ω–æ —Ñ–∞–π–ª–æ–≤: ${uploadedFiles.length}/${MAX_FILES}`;
                        }
                    });
                };
                
                reader.readAsDataURL(file);
            }
            
            // Drag and drop –¥–ª—è –º–µ–¥–∏–∞—Ñ–∞–π–ª–æ–≤
            mediaContainer.addEventListener('dragover', function(e) {
                e.preventDefault();
                mediaContainer.classList.add('drag-over');
            });
            
            mediaContainer.addEventListener('dragleave', function() {
                mediaContainer.classList.remove('drag-over');
            });
            
            mediaContainer.addEventListener('drop', function(e) {
                e.preventDefault();
                mediaContainer.classList.remove('drag-over');
                
                const files = Array.from(e.dataTransfer.files);
                handleMediaFiles(files);
            });
            
            // –ë–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –ø–æ–ª—è —Ç—Ä–µ–±–æ–≤–∞–Ω–∏–π –¥–ª—è –Ω–µ-VIP –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
            const requirementsField = document.getElementById('requirements');
            const vipLock = document.getElementById('vipLock');
            const vipMessage = document.getElementById('vipMessage');
            
            vipLock.addEventListener('click', function() {
                vipMessage.style.display = 'block';
                setTimeout(() => {
                    vipMessage.style.display = 'none';
                }, 3000);
            });
            
            requirementsField.addEventListener('focus', function() {
                const user = getUserData();
                if (!user || user.subscriptionType !== 'vip' && user.subscriptionType !== 'premium' && user.subscriptionType !== 'retroware') {
                    vipMessage.style.display = 'block';
                    this.blur();
                    setTimeout(() => {
                        vipMessage.style.display = 'none';
                    }, 3000);
                }
            });
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è —Ñ–æ—Ä–º—ã
            const form = document.getElementById('memeForm');
            const submitFormBtn = document.getElementById('submitFormBtn');
            const requiredFields = [
                {id: 'firstName', errorId: 'firstNameError'},
                {id: 'lastName', errorId: 'lastNameError'},
                {id: 'requestText', errorId: 'requestTextError'}
            ];
            
            function validateForm() {
                let isValid = true;
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã—Ö —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö –ø–æ–ª–µ–π
                requiredFields.forEach(field => {
                    const input = document.getElementById(field.id);
                    const error = document.getElementById(field.errorId);
                    
                    if (!input.value.trim()) {
                        error.style.display = 'block';
                        error.textContent = field.id === 'firstName' || field.id === 'lastName' 
                            ? '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –≤–∞—à–µ ' + (field.id === 'firstName' ? '–∏–º—è' : '—Ñ–∞–º–∏–ª–∏—é') + ' (—Ç–æ–ª—å–∫–æ –∞–Ω–≥–ª–∏–π—Å–∫–∏–µ —Å–∏–º–≤–æ–ª—ã)' 
                            : '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –Ω–∞–ø–∏—à–∏—Ç–µ –≤–∞—à—É –ø—Ä–æ—Å—å–±—É';
                        input.style.borderColor = 'var(--accent-red)';
                        isValid = false;
                    } else if ((field.id === 'firstName' || field.id === 'lastName') && !validateEnglishName(input.value.trim())) {
                        error.style.display = 'block';
                        error.textContent = '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —Ç–æ–ª—å–∫–æ –∞–Ω–≥–ª–∏–π—Å–∫–∏–µ —Å–∏–º–≤–æ–ª—ã (A-Z, a-z)';
                        input.style.borderColor = 'var(--accent-red)';
                        isValid = false;
                    } else {
                        error.style.display = 'none';
                        input.style.borderColor = body.classList.contains('dark-theme') ? 'var(--border-dark)' : 'var(--border-light)';
                    }
                });
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–∞—Ç—ã —Ä–æ–∂–¥–µ–Ω–∏—è
                const birthDay = document.getElementById('birthDay').value;
                const birthMonth = document.getElementById('birthMonth').value;
                const birthYear = document.getElementById('birthYear').value;
                const birthDateError = document.getElementById('birthDateError');
                
                if (!birthDay || !birthMonth || !birthYear) {
                    birthDateError.style.display = 'block';
                    document.querySelector('.date-input select').style.borderColor = 'var(--accent-red)';
                    isValid = false;
                } else {
                    birthDateError.style.display = 'none';
                    document.querySelectorAll('.date-input select').forEach(select => {
                        select.style.borderColor = body.classList.contains('dark-theme') ? 'var(--border-dark)' : 'var(--border-light)';
                    });
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫—É–ª–¥–∞—É–Ω–∞
                const user = getUserData();
                if (user && user.cooldownUntil && user.cooldownUntil > Date.now()) {
                    isValid = false;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–º–∏—Ç–∞ –º–µ–º–æ–≤
                if (user && user.isLoggedIn) {
                    const memesToday = parseInt(document.getElementById('memesToday').textContent);
                    const memesLimit = parseInt(document.getElementById('memesLimit').textContent);
                    
                    if (memesToday >= memesLimit) {
                        isValid = false;
                    }
                }
                
                // –ê–∫—Ç–∏–≤–∞—Ü–∏—è/–¥–µ–∞–∫—Ç–∏–≤–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∏ –æ—Ç–ø—Ä–∞–≤–∫–∏
                submitFormBtn.disabled = !isValid;
                
                return isValid;
            }
            
            // –°–ª—É—à–∞—Ç–µ–ª–∏ —Å–æ–±—ã—Ç–∏–π –¥–ª—è –≤–∞–ª–∏–¥–∞—Ü–∏–∏
            form.addEventListener('input', validateForm);
            form.addEventListener('change', validateForm);
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
            const subscriptionModal = document.getElementById('subscriptionModal');
            const paymentModal = document.getElementById('paymentModal');
            const clickerModal = document.getElementById('clickerModal');
            const infoModal = document.getElementById('infoModal');
            const supportModal = document.getElementById('supportModal');
            const authModal = document.getElementById('authModal');
            const confirmModal = document.getElementById('confirmModal');
            
            const subscribeBtn = document.getElementById('subscribeBtn');
            const clickerBtn = document.getElementById('clickerBtn');
            const infoBtn = document.getElementById('infoBtn');
            const supportBtn = document.getElementById('supportBtn');
            
            const closeSubscriptionModal = document.getElementById('closeSubscriptionModal');
            const closePaymentModal = document.getElementById('closePaymentModal');
            const closeClickerModal = document.getElementById('closeClickerModal');
            const closeInfoModal = document.getElementById('closeInfoModal');
            const closeSupportModal = document.getElementById('closeSupportModal');
            const closeAuthModal = document.getElementById('closeAuthModal');
            const closeConfirmModal = document.getElementById('closeConfirmModal');
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –æ—Ç–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
            subscribeBtn.addEventListener('click', function() {
                subscriptionModal.style.display = 'flex';
            });
            
            clickerBtn.addEventListener('click', function() {
                clickerModal.style.display = 'flex';
                updateCoinDisplay();
            });
            
            infoBtn.addEventListener('click', function() {
                infoModal.style.display = 'flex';
            });
            
            supportBtn.addEventListener('click', function() {
                supportModal.style.display = 'flex';
            });
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω
            closeSubscriptionModal.addEventListener('click', function() {
                subscriptionModal.style.display = 'none';
            });
            
            closePaymentModal.addEventListener('click', function() {
                paymentModal.style.display = 'none';
            });
            
            closeClickerModal.addEventListener('click', function() {
                clickerModal.style.display = 'none';
            });
            
            closeInfoModal.addEventListener('click', function() {
                infoModal.style.display = 'none';
            });
            
            closeSupportModal.addEventListener('click', function() {
                supportModal.style.display = 'none';
            });
            
            closeAuthModal.addEventListener('click', function() {
                authModal.style.display = 'none';
            });
            
            closeConfirmModal.addEventListener('click', function() {
                confirmModal.style.display = 'none';
            });
            
            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –∏—Ö
            window.addEventListener('click', function(e) {
                if (e.target === subscriptionModal) {
                    subscriptionModal.style.display = 'none';
                }
                if (e.target === paymentModal) {
                    paymentModal.style.display = 'none';
                }
                if (e.target === clickerModal) {
                    clickerModal.style.display = 'none';
                }
                if (e.target === infoModal) {
                    infoModal.style.display = 'none';
                }
                if (e.target === supportModal) {
                    supportModal.style.display = 'none';
                }
                if (e.target === authModal) {
                    authModal.style.display = 'none';
                }
                if (e.target === confirmModal) {
                    confirmModal.style.display = 'none';
                }
            });
            
            // –ë–∞–ª–∞–Ω—Å - –º–æ–Ω–µ—Ç–∫–∞ —Å –¥–≤—É–º—è —Å—Ç–æ—Ä–æ–Ω–∞–º–∏
            const headerBalanceCoin = document.getElementById('headerBalanceCoin');
            const clickerBalanceCoin = document.getElementById('clickerBalanceCoin');
            const balanceDisplay = document.getElementById('balanceDisplay');
            const balanceValue = document.getElementById('balanceValue');
            const balanceCurrency = document.getElementById('balanceCurrency');
            
            let isBalanceFlipped = false;
            let currentBalance = 0;
            let rubBalance = 0;
            
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –±–∞–ª–∞–Ω—Å–∞
            function toggleBalance() {
                isBalanceFlipped = !isBalanceFlipped;
                
                // –ê–Ω–∏–º–∞—Ü–∏—è –ø–µ—Ä–µ–≤–æ—Ä–æ—Ç–∞
                const coins = document.querySelectorAll('.balance-coin');
                coins.forEach(coin => {
                    coin.classList.toggle('flipped');
                });
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
                if (isBalanceFlipped) {
                    balanceDisplay.classList.add('rub');
                    balanceValue.textContent = rubBalance.toLocaleString();
                    balanceCurrency.textContent = '‚ÇΩ';
                } else {
                    balanceDisplay.classList.remove('rub');
                    balanceValue.textContent = currentBalance.toLocaleString();
                    balanceCurrency.textContent = 'Rcoins';
                }
            }
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–ª–∏–∫–∞ –Ω–∞ –º–æ–Ω–µ—Ç–∫—É
            headerBalanceCoin.addEventListener('click', toggleBalance);
            if (clickerBalanceCoin) {
                clickerBalanceCoin.addEventListener('click', toggleBalance);
            }
            
            // –ö–ª–∏–∫–µ—Ä-–∏–≥—Ä–∞
            let rcoins = 0;
            let clicks = 0;
            const CLICK_LIMIT = 230000;
            let clicksPerSecond = 0;
            let lastClickTime = Date.now();
            let clickTimes = [];
            let autoClickerWarnings = 0;
            let autoClickerBannedUntil = 0;
            
            const clickButton = document.getElementById('clickButton');
            const coinCountElement = document.getElementById('coinCount');
            const clicksCountElement = document.getElementById('clicksCount');
            const clicksLimitElement = document.getElementById('clicksLimit');
            const clicksPerSecondElement = document.getElementById('clicksPerSecond');
            
            // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö –∫–ª–∏–∫–µ—Ä–∞
            function loadClickerData() {
                const user = getUserData();
                if (user) {
                    rcoins = user.rcoins || 0;
                    currentBalance = rcoins;
                    rubBalance = user.rubBalance || 0;
                    clicks = user.clicks || 0;
                    autoClickerWarnings = user.autoClickerWarnings || 0;
                    autoClickerBannedUntil = user.autoClickerBannedUntil || 0;
                    
                    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –±–∞–Ω–∞ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä–∞
                    if (autoClickerBannedUntil > Date.now()) {
                        const timeLeft = Math.ceil((autoClickerBannedUntil - Date.now()) / 1000 / 60);
                        alert(`–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä –∑–∞–±–∞–Ω–µ–Ω. –û—Å—Ç–∞–ª–æ—Å—å: ${timeLeft} –º–∏–Ω—É—Ç`);
                    }
                    
                    updateCoinDisplay();
                }
            }
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∫–ª–∏–∫–µ—Ä–∞
            function updateCoinDisplay() {
                coinCountElement.textContent = rcoins.toLocaleString();
                clicksCountElement.textContent = clicks.toLocaleString();
                clicksLimitElement.textContent = CLICK_LIMIT.toLocaleString();
                clicksPerSecondElement.textContent = clicksPerSecond.toFixed(1);
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –±–∞–ª–∞–Ω—Å–∞
                currentBalance = rcoins;
                if (!isBalanceFlipped) {
                    balanceValue.textContent = currentBalance.toLocaleString();
                }
                
                // –ü–æ–∫–∞–∑/—Å–∫—Ä—ã—Ç–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –±–∞–ª–∞–Ω—Å–∞ –≤ —à–∞–ø–∫–µ
                balanceDisplay.style.display = 'flex';
                
                // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö
                const user = getUserData();
                if (user) {
                    user.rcoins = rcoins;
                    user.rubBalance = rubBalance;
                    user.clicks = clicks;
                    user.autoClickerWarnings = autoClickerWarnings;
                    user.autoClickerBannedUntil = autoClickerBannedUntil;
                    saveUserData(user);
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä–∞
            function checkAutoClicker() {
                const now = Date.now();
                clickTimes = clickTimes.filter(time => now - time < 60000); // –¢–æ–ª—å–∫–æ –ø–æ—Å–ª–µ–¥–Ω—è—è –º–∏–Ω—É—Ç–∞
                
                // –ï—Å–ª–∏ –±–æ–ª—å—à–µ 800 –∫–ª–∏–∫–æ–≤ –≤ –º–∏–Ω—É—Ç—É - —ç—Ç–æ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä
                if (clickTimes.length > 800) {
                    autoClickerWarnings++;
                    
                    if (autoClickerWarnings >= 3) {
                        // –ë–∞–Ω –Ω–∞ 15 –º–∏–Ω—É—Ç –∏ —à—Ç—Ä–∞—Ñ 50,000 Rcoins
                        autoClickerBannedUntil = Date.now() + 15 * 60 * 1000;
                        rcoins = Math.max(-50000, rcoins - 50000);
                        
                        alert(`–û–±–Ω–∞—Ä—É–∂–µ–Ω –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä! –í—ã –ø–æ–ª—É—á–∏–ª–∏ –±–∞–Ω –Ω–∞ 15 –º–∏–Ω—É—Ç –∏ —à—Ç—Ä–∞—Ñ 50,000 Rcoins.`);
                        
                        // –°–±—Ä–æ—Å –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–π
                        autoClickerWarnings = 0;
                    } else {
                        alert(`–í–Ω–∏–º–∞–Ω–∏–µ! –û–±–Ω–∞—Ä—É–∂–µ–Ω–∞ –ø–æ–¥–æ–∑—Ä–∏—Ç–µ–ª—å–Ω–∞—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å (–∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä). –ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ ${autoClickerWarnings}/3.`);
                    }
                    
                    // –û—á–∏—Å—Ç–∫–∞ –∏—Å—Ç–æ—Ä–∏–∏ –∫–ª–∏–∫–æ–≤
                    clickTimes = [];
                    return true;
                }
                
                return false;
            }
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∏–∫–∞
            clickButton.addEventListener('click', function() {
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –±–∞–Ω–∞ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä–∞
                if (autoClickerBannedUntil > Date.now()) {
                    const timeLeft = Math.ceil((autoClickerBannedUntil - Date.now()) / 1000 / 60);
                    alert(`–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä –∑–∞–±–∞–Ω–µ–Ω. –û—Å—Ç–∞–ª–æ—Å—å: ${timeLeft} –º–∏–Ω—É—Ç`);
                    return;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–º–∏—Ç–∞ –∫–ª–∏–∫–æ–≤
                if (clicks >= CLICK_LIMIT) {
                    alert(`–î–æ—Å—Ç–∏–≥–Ω—É—Ç –ª–∏–º–∏—Ç –∫–ª–∏–∫–æ–≤ (${CLICK_LIMIT.toLocaleString()}). –ë–æ–ª—å—à–µ –∫–ª–∏–∫–∞—Ç—å –Ω–µ–ª—å–∑—è.`);
                    return;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä–∞
                const now = Date.now();
                clickTimes.push(now);
                
                if (checkAutoClicker()) {
                    return;
                }
                
                // –†–∞—Å—á–µ—Ç –∫–ª–∏–∫–æ–≤ –≤ —Å–µ–∫—É–Ω–¥—É
                if (lastClickTime) {
                    const timeDiff = (now - lastClickTime) / 1000;
                    if (timeDiff > 0) {
                        clicksPerSecond = 1 / timeDiff;
                    }
                }
                lastClickTime = now;
                
                // –ù–∞—á–∏—Å–ª–µ–Ω–∏–µ Rcoins –∏ –∫–ª–∏–∫–æ–≤
                rcoins++;
                clicks++;
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
                updateCoinDisplay();
                
                // –°–æ–∑–¥–∞–Ω–∏–µ –∞–Ω–∏–º–∞—Ü–∏–∏
                createClickAnimation();
            });
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –∞–Ω–∏–º–∞—Ü–∏–∏ –∫–ª–∏–∫–∞
            function createClickAnimation() {
                const emojis = ['üí∞', 'üíé', 'üí∏', 'üè¶'];
                const emoji = emojis[Math.floor(Math.random() * emojis.length)];
                
                const floatingEmoji = document.createElement('div');
                floatingEmoji.textContent = emoji;
                floatingEmoji.style.position = 'fixed';
                floatingEmoji.style.fontSize = '24px';
                floatingEmoji.style.pointerEvents = 'none';
                floatingEmoji.style.zIndex = '1000';
                
                // –ü–æ–∑–∏—Ü–∏—è –æ–∫–æ–ª–æ –∫–Ω–æ–ø–∫–∏ –∫–ª–∏–∫–µ—Ä–∞
                const buttonRect = clickButton.getBoundingClientRect();
                floatingEmoji.style.left = (buttonRect.left + Math.random() * buttonRect.width) + 'px';
                floatingEmoji.style.top = (buttonRect.top + buttonRect.height / 2) + 'px';
                
                document.body.appendChild(floatingEmoji);
                
                // –ê–Ω–∏–º–∞—Ü–∏—è
                let opacity = 1;
                let top = buttonRect.top;
                const animation = setInterval(() => {
                    opacity -= 0.05;
                    top -= 3;
                    floatingEmoji.style.opacity = opacity;
                    floatingEmoji.style.top = top + 'px';
                    
                    if (opacity <= 0) {
                        clearInterval(animation);
                        document.body.removeChild(floatingEmoji);
                    }
                }, 30);
            }
            
            // –§—É–Ω–∫—Ü–∏–∏ –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –¥–∞–Ω–Ω—ã–º–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
            function getUserData() {
                const userData = localStorage.getItem('retroware_user');
                return userData ? JSON.parse(userData) : null;
            }
            
            function saveUserData(user) {
                localStorage.setItem('retroware_user', JSON.stringify(user));
            }
            
            function updateUserUI(user) {
                if (user && user.isLoggedIn) {
                    // –†–∞–∑–±–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –ø–æ–ª—è —Ç—Ä–µ–±–æ–≤–∞–Ω–∏–π –¥–ª—è VIP
                    const userPlan = user.subscriptionType || 'standard';
                    if (userPlan === 'vip' || userPlan === 'premium' || userPlan === 'retroware') {
                        requirementsField.disabled = false;
                        requirementsField.placeholder = '–í–≤–µ–¥–∏—Ç–µ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è/—É–ø–æ–º–∏–Ω–∞–Ω–∏—è';
                        vipLock.style.display = 'none';
                    }
                    
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ
                    document.getElementById('userStats').style.display = 'flex';
                    document.getElementById('subscriptionType').textContent = userPlan.charAt(0).toUpperCase() + userPlan.slice(1);
                    
                    // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –ª–∏–º–∏—Ç–∞ –º–µ–º–æ–≤ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –ø–æ–¥–ø–∏—Å–∫–∏
                    let memesLimit = 2;
                    if (userPlan === 'vip') memesLimit = 4;
                    if (userPlan === 'premium') memesLimit = 6;
                    if (userPlan === 'retroware') memesLimit = 10;
                    
                    document.getElementById('memesLimit').textContent = memesLimit;
                    user.memesLimit = memesLimit;
                    
                    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–º–∏—Ç–∞ –º–µ–º–æ–≤
                    const memesToday = user.memesToday || 0;
                    document.getElementById('memesToday').textContent = memesToday;
                    
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç–∞–π–º–µ—Ä —Å–±—Ä–æ—Å–∞ –µ—Å–ª–∏ –ª–∏–º–∏—Ç –∏—Å—á–µ—Ä–ø–∞–Ω
                    if (memesToday >= memesLimit) {
                        showResetTimer();
                    } else {
                        document.getElementById('resetTimerContainer').style.display = 'none';
                    }
                    
                    // –î–Ω–∏ –¥–æ –∫–æ–Ω—Ü–∞ –ø–æ–¥–ø–∏—Å–∫–∏
                    if (userPlan === 'standard') {
                        document.getElementById('daysLeft').textContent = '‚àû';
                    } else {
                        const daysLeft = user.subscriptionEndDate ? 
                            Math.ceil((new Date(user.subscriptionEndDate) - new Date()) / (1000 * 60 * 60 * 24)) : 30;
                        document.getElementById('daysLeft').textContent = daysLeft > 0 ? daysLeft : 0;
                    }
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
                    const authContainer = document.getElementById('authContainer');
                    authContainer.innerHTML = `
                        <div class="user-info">
                            <div class="user-avatar">${user.username ? user.username.charAt(0).toUpperCase() : '–ü'}</div>
                            <div class="user-name">${user.username || '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å'}</div>
                            <button id="logoutBtn" style="background:none; border:none; cursor:pointer; margin-left:10px; color:var(--accent-red);">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </div>
                    `;
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã—Ö–æ–¥–∞
                    document.getElementById('logoutBtn').addEventListener('click', logoutUser);
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫—É–ª–¥–∞—É–Ω
                    checkCooldown();
                } else {
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –≤—Ö–æ–¥–∞
                    const authContainer = document.getElementById('authContainer');
                    authContainer.innerHTML = `
                        <button class="auth-btn" id="authLoginBtn">
                            <i class="fas fa-user"></i> –í–æ–π—Ç–∏
                        </button>
                    `;
                    
                    document.getElementById('authLoginBtn').addEventListener('click', showAuthModal);
                    document.getElementById('userStats').style.display = 'none';
                    document.getElementById('balanceDisplay').style.display = 'none';
                    document.getElementById('resetTimerContainer').style.display = 'none';
                }
            }
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
            function showAuthModal() {
                authModal.style.display = 'flex';
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
                document.getElementById('cancelLogin').addEventListener('click', function() {
                    authModal.style.display = 'none';
                });
                
                document.getElementById('confirmLogin').addEventListener('click', function() {
                    const username = document.getElementById('loginEmail').value.trim();
                    const password = document.getElementById('loginPassword').value.trim();
                    
                    if (username && password) {
                        // –°–æ–∑–¥–∞–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                        const user = {
                            isLoggedIn: true,
                            id: 'user_' + Math.random().toString(36).substr(2, 9),
                            username: username,
                            subscriptionType: 'standard',
                            memesLimit: 2,
                            memesToday: 0,
                            warnings: 0,
                            rcoins: 1000, // –ù–∞—á–∞–ª—å–Ω—ã–µ Rcoins
                            rubBalance: 0,
                            clicks: 0,
                            subscriptionEndDate: null, // –î–ª—è standard –ø–æ–¥–ø–∏—Å–∫–∏ –Ω–µ—Ç —Å—Ä–æ–∫–∞
                            lastSubmissionDate: new Date().toDateString(),
                            lastResetDate: getResetDate()
                        };
                        
                        saveUserData(user);
                        updateUserUI(user);
                        loadClickerData();
                        alert('–í—ã —É—Å–ø–µ—à–Ω–æ –≤–æ—à–ª–∏ –≤ —Å–∏—Å—Ç–µ–º—É!');
                        authModal.style.display = 'none';
                    } else {
                        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –ª–æ–≥–∏–Ω –∏ –ø–∞—Ä–æ–ª—å.');
                    }
                });
            }
            
            function logoutUser() {
                localStorage.removeItem('retroware_user');
                updateUserUI(null);
                rcoins = 0;
                rubBalance = 0;
                clicks = 0;
                alert('–í—ã –≤—ã—à–ª–∏ –∏–∑ —Å–∏—Å—Ç–µ–º—ã.');
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–±—Ä–æ—Å —Å—á–µ—Ç—á–∏–∫–∞ –º–µ–º–æ–≤ –Ω–∞ –Ω–æ–≤—ã–π –¥–µ–Ω—å
            function resetDailyCounterIfNeeded(user) {
                const now = new Date();
                const resetDate = getResetDate();
                
                if (user && user.lastResetDate !== resetDate) {
                    user.memesToday = 0;
                    user.lastResetDate = resetDate;
                    saveUserData(user);
                }
                return user;
            }
            
            // –ü–æ–ª—É—á–∏—Ç—å –¥–∞—Ç—É —Å–±—Ä–æ—Å–∞ (12:00)
            function getResetDate() {
                const now = new Date();
                const resetTime = new Date(now);
                resetTime.setHours(12, 0, 0, 0);
                
                // –ï—Å–ª–∏ —É–∂–µ –ø—Ä–æ—à–ª–æ 12:00 —Å–µ–≥–æ–¥–Ω—è, —Å–ª–µ–¥—É—é—â–∏–π —Å–±—Ä–æ—Å –∑–∞–≤—Ç—Ä–∞
                if (now > resetTime) {
                    resetTime.setDate(resetTime.getDate() + 1);
                }
                
                return resetTime.toDateString();
            }
            
            // –ü–æ–∫–∞–∑–∞—Ç—å —Ç–∞–π–º–µ—Ä —Å–±—Ä–æ—Å–∞
            function showResetTimer() {
                const resetTimerContainer = document.getElementById('resetTimerContainer');
                const resetTimer = document.getElementById('resetTimer');
                
                resetTimerContainer.style.display = 'block';
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ç–∞–π–º–µ—Ä–∞ –∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É
                function updateTimer() {
                    const now = new Date();
                    const resetTime = new Date();
                    resetTime.setHours(12, 0, 0, 0);
                    
                    // –ï—Å–ª–∏ —É–∂–µ –ø—Ä–æ—à–ª–æ 12:00 —Å–µ–≥–æ–¥–Ω—è, —Å–ª–µ–¥—É—é—â–∏–π —Å–±—Ä–æ—Å –∑–∞–≤—Ç—Ä–∞
                    if (now > resetTime) {
                        resetTime.setDate(resetTime.getDate() + 1);
                    }
                    
                    const diff = resetTime - now;
                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                    
                    resetTimer.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                }
                
                updateTimer();
                setInterval(updateTimer, 1000);
            }
            
            // –ö—É–ª–¥–∞—É–Ω –æ—Ç–ø—Ä–∞–≤–∫–∏ (10 –º–∏–Ω—É—Ç)
            function startCooldown() {
                const user = getUserData();
                if (user) {
                    user.cooldownUntil = Date.now() + 10 * 60 * 1000; // 10 –º–∏–Ω—É—Ç
                    saveUserData(user);
                    checkCooldown();
                }
            }
            
            function checkCooldown() {
                const user = getUserData();
                const cooldownContainer = document.getElementById('cooldownContainer');
                const cooldownTimer = document.getElementById('cooldownTimer');
                const submitFormBtn = document.getElementById('submitFormBtn');
                
                if (user && user.cooldownUntil && user.cooldownUntil > Date.now()) {
                    cooldownContainer.style.display = 'block';
                    submitFormBtn.disabled = true;
                    
                    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ç–∞–π–º–µ—Ä–∞ –∫—É–ª–¥–∞—É–Ω–∞
                    function updateCooldown() {
                        const now = Date.now();
                        const diff = user.cooldownUntil - now;
                        
                        if (diff <= 0) {
                            cooldownContainer.style.display = 'none';
                            submitFormBtn.disabled = false;
                            user.cooldownUntil = null;
                            saveUserData(user);
                            return;
                        }
                        
                        const minutes = Math.floor(diff / (1000 * 60));
                        const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                        cooldownTimer.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    }
                    
                    updateCooldown();
                    const cooldownInterval = setInterval(() => {
                        updateCooldown();
                        if (!user.cooldownUntil || user.cooldownUntil <= Date.now()) {
                            clearInterval(cooldownInterval);
                        }
                    }, 1000);
                } else {
                    cooldownContainer.style.display = 'none';
                }
            }
            
            // –°–∏—Å—Ç–µ–º–∞ –ø–æ–¥–ø–∏—Å–æ–∫ - –ò–°–ü–†–ê–í–õ–ï–ù–ù–´–ï –¶–ï–ù–´
            const selectPlanButtons = document.querySelectorAll('.select-plan-btn');
            let selectedPlan = null;
            
            // –¶–µ–Ω—ã –ø–æ–¥–ø–∏—Å–æ–∫ –≤ Rcoins - –ò–°–ü–†–ê–í–õ–ï–ù–û
            const planRcoinPrices = {
                'vip': 700000,      // 700,000 Rcoins
                'premium': 1400000, // 1,400,000 Rcoins
                'retroware': 1650000 // 1,650,000 Rcoins
            };
            
            // –¶–µ–Ω—ã –ø–æ–¥–ø–∏—Å–æ–∫ –≤ —Ä—É–±–ª—è—Ö - –ò–°–ü–†–ê–í–õ–ï–ù–û
            const planRubPrices = {
                'vip': 499,      // 499‚ÇΩ
                'premium': 999,  // 999‚ÇΩ
                'retroware': 99  // 99‚ÇΩ (–ò–ó–ú–ï–ù–ï–ù–û —Å 1499)
            };
            
            // –ò–∫–æ–Ω–∫–∏ –ø–ª–∞–Ω–æ–≤
            const planIcons = {
                'vip': 'üëë',
                'premium': 'üíé',
                'retroware': 'üöÄ'
            };
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –ø–ª–∞–Ω–∞ –ø–æ–¥–ø–∏—Å–∫–∏
            selectPlanButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const plan = this.getAttribute('data-plan');
                    
                    if (plan === 'standard') {
                        alert('Plan Standard —É–∂–µ –∞–∫—Ç–∏–≤–µ–Ω!');
                        return;
                    }
                    
                    const user = getUserData();
                    if (!user || !user.isLoggedIn) {
                        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–æ–π–¥–∏—Ç–µ –≤ —Å–∏—Å—Ç–µ–º—É, —á—Ç–æ–±—ã –≤—ã–±—Ä–∞—Ç—å –ø–ª–∞–Ω –ø–æ–¥–ø–∏—Å–∫–∏.');
                        return;
                    }
                    
                    selectedPlan = plan;
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –≤ –º–æ–¥–∞–ª—å–Ω–æ–º –æ–∫–Ω–µ –æ–ø–ª–∞—Ç—ã
                    document.getElementById('selectedPlanName').textContent = 
                        plan.charAt(0).toUpperCase() + plan.slice(1);
                    document.getElementById('paymentPlanTitle').textContent = 
                        plan.charAt(0).toUpperCase() + plan.slice(1);
                    document.getElementById('paymentPlanIcon').textContent = 
                        planIcons[plan] || 'üëë';
                    document.getElementById('rcoinPrice').textContent = 
                        formatNumber(planRcoinPrices[plan]); // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
                    document.getElementById('rubPrice').textContent = 
                        planRubPrices[plan] + '‚ÇΩ';
                    
                    // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—ã–±–æ—Ä —Å–ø–æ—Å–æ–±–∞ –æ–ø–ª–∞—Ç—ã
                    document.querySelectorAll('.payment-option').forEach(option => {
                        option.classList.remove('selected');
                    });
                    
                    // –ó–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –ø–æ–¥–ø–∏—Å–æ–∫ –∏ –æ—Ç–∫—Ä—ã–≤–∞–µ–º –æ–ø–ª–∞—Ç—É
                    subscriptionModal.style.display = 'none';
                    paymentModal.style.display = 'flex';
                });
            });
            
            // –í—ã–±–æ—Ä —Å–ø–æ—Å–æ–±–∞ –æ–ø–ª–∞—Ç—ã
            const rcoinOption = document.getElementById('rcoinOption');
            const rubOption = document.getElementById('rubOption');
            let selectedPaymentMethod = null;
            
            rcoinOption.addEventListener('click', function() {
                document.querySelectorAll('.payment-option').forEach(option => {
                    option.classList.remove('selected');
                });
                this.classList.add('selected');
                selectedPaymentMethod = 'rcoins';
            });
            
            rubOption.addEventListener('click', function() {
                document.querySelectorAll('.payment-option').forEach(option => {
                    option.classList.remove('selected');
                });
                this.classList.add('selected');
                selectedPaymentMethod = 'rub';
            });
            
            // –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –æ–ø–ª–∞—Ç—ã
            document.getElementById('cancelPayment').addEventListener('click', function() {
                paymentModal.style.display = 'none';
                selectedPlan = null;
                selectedPaymentMethod = null;
            });
            
            document.getElementById('confirmPayment').addEventListener('click', function() {
                if (!selectedPaymentMethod) {
                    alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Å–ø–æ—Å–æ–± –æ–ø–ª–∞—Ç—ã.');
                    return;
                }
                
                const user = getUserData();
                if (!user) {
                    alert('–û—à–∏–±–∫–∞: –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω.');
                    return;
                }
                
                if (selectedPaymentMethod === 'rcoins') {
                    // –û–ø–ª–∞—Ç–∞ Rcoins
                    const rcoinPrice = planRcoinPrices[selectedPlan];
                    
                    if (user.rcoins < rcoinPrice) {
                        alert(`–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ Rcoins. –£ –≤–∞—Å: ${user.rcoins.toLocaleString()}, —Ç—Ä–µ–±—É–µ—Ç—Å—è: ${formatNumber(rcoinPrice)}`);
                        return;
                    }
                    
                    if (confirm(`–°–ø–∏—Å–∞—Ç—å ${formatNumber(rcoinPrice)} Rcoins –¥–ª—è –ø–æ–∫—É–ø–∫–∏ –ø–æ–¥–ø–∏—Å–∫–∏ ${selectedPlan.toUpperCase()}?`)) {
                        user.rcoins -= rcoinPrice;
                        user.subscriptionType = selectedPlan;
                        
                        // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å—Ä–æ–∫–∞ –ø–æ–¥–ø–∏—Å–∫–∏ (30 –¥–Ω–µ–π)
                        user.subscriptionEndDate = new Date(Date.now() + 30 * 24 * 60 * 60 * 1000).toISOString();
                        
                        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ª–∏–º–∏—Ç–æ–≤
                        updateUserSubscriptionLimits(user);
                        
                        saveUserData(user);
                        updateUserUI(user);
                        updateCoinDisplay();
                        
                        alert(`–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í—ã —É—Å–ø–µ—à–Ω–æ –ø—Ä–∏–æ–±—Ä–µ–ª–∏ –ø–æ–¥–ø–∏—Å–∫—É ${selectedPlan.toUpperCase()}!`);
                        paymentModal.style.display = 'none';
                        selectedPlan = null;
                        selectedPaymentMethod = null;
                    }
                } else {
                    // –û–ø–ª–∞—Ç–∞ —Ä—É–±–ª—è–º–∏
                    const rubPrice = planRubPrices[selectedPlan];
                    
                    alert(`–î–ª—è –æ–ø–ª–∞—Ç—ã –ø–æ–¥–ø–∏—Å–∫–∏ ${selectedPlan.toUpperCase()} –Ω–∞ —Å—É–º–º—É ${rubPrice}‚ÇΩ —Å–≤—è–∂–∏—Ç–µ—Å—å —Å @vipkotax –≤ Telegram –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Ä–µ–∫–≤–∏–∑–∏—Ç–æ–≤.`);
                    paymentModal.style.display = 'none';
                    selectedPlan = null;
                    selectedPaymentMethod = null;
                }
            });
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ª–∏–º–∏—Ç–æ–≤ –ø–æ–¥–ø–∏—Å–∫–∏
            function updateUserSubscriptionLimits(user) {
                const plan = user.subscriptionType || 'standard';
                
                let memesLimit = 2;
                if (plan === 'vip') memesLimit = 4;
                if (plan === 'premium') memesLimit = 6;
                if (plan === 'retroware') memesLimit = 10;
                
                user.memesLimit = memesLimit;
                return user;
            }
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º—ã
            submitFormBtn.addEventListener('click', function() {
                if (!validateForm()) {
                    alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è –ø–µ—Ä–µ–¥ –æ—Ç–ø—Ä–∞–≤–∫–æ–π —Ñ–æ—Ä–º—ã.');
                    return;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫—É–ª–¥–∞—É–Ω–∞
                const user = getUserData();
                if (user && user.cooldownUntil && user.cooldownUntil > Date.now()) {
                    alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–¥–æ–∂–¥–∏—Ç–µ –ø–µ—Ä–µ–¥ —Å–ª–µ–¥—É—é—â–µ–π –æ—Ç–ø—Ä–∞–≤–∫–æ–π.');
                    return;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–º–∏—Ç–∞ –º–µ–º–æ–≤
                if (user && user.isLoggedIn) {
                    const memesToday = user.memesToday || 0;
                    const memesLimit = user.memesLimit || 2;
                    
                    if (memesToday >= memesLimit) {
                        alert(`–í—ã –¥–æ—Å—Ç–∏–≥–ª–∏ –¥–Ω–µ–≤–Ω–æ–≥–æ –ª–∏–º–∏—Ç–∞ –¥–ª—è –≤–∞—à–µ–π –ø–æ–¥–ø–∏—Å–∫–∏ (${memesLimit} –º–µ–º–æ–≤ –≤ –¥–µ–Ω—å). –õ–∏–º–∏—Ç —Å–±—Ä–æ—Å–∏—Ç—Å—è –≤ 12:00.`);
                        return;
                    }
                }
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
                confirmModal.style.display = 'flex';
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
                document.getElementById('cancelConfirm').addEventListener('click', function() {
                    confirmModal.style.display = 'none';
                });
                
                document.getElementById('confirmSubmit').addEventListener('click', function() {
                    const confirmCheckbox = document.getElementById('confirmCheckbox');
                    
                    if (!confirmCheckbox.checked) {
                        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç–µ, —á—Ç–æ –Ω–µ –æ—Ç–ø—Ä–∞–≤–ª—è–µ—Ç–µ –∑–∞–ø—Ä–µ—â–µ–Ω–Ω—ã–π –∫–æ–Ω—Ç–µ–Ω—Ç.');
                        return;
                    }
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã—Ö –º–µ–º–æ–≤
                    const user = getUserData();
                    if (user && user.isLoggedIn) {
                        const memesTodayElement = document.getElementById('memesToday');
                        let memesToday = parseInt(memesTodayElement.textContent);
                        memesToday++;
                        memesTodayElement.textContent = memesToday;
                        
                        // –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
                        user.memesToday = memesToday;
                        user.lastSubmissionDate = new Date().toDateString();
                        saveUserData(user);
                        
                        // –ó–∞–ø—É—Å–∫–∞–µ–º –∫—É–ª–¥–∞—É–Ω
                        startCooldown();
                    }
                    
                    // –°–±–æ—Ä –¥–∞–Ω–Ω—ã—Ö —Ñ–æ—Ä–º—ã
                    const formData = {
                        firstName: document.getElementById('firstName').value.trim(),
                        lastName: document.getElementById('lastName').value.trim(),
                        birthDate: `${document.getElementById('birthDay').value}.${document.getElementById('birthMonth').value}.${document.getElementById('birthYear').value}`,
                        requestText: document.getElementById('requestText').value.trim(),
                        requirements: document.getElementById('requirements').value.trim(),
                        files: uploadedFiles.map(f => f.name)
                    };
                    
                    // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ –∑–¥–µ—Å—å –±—ã–ª –±—ã AJAX –∑–∞–ø—Ä–æ—Å –Ω–∞ —Å–µ—Ä–≤–µ—Ä
                    alert(`–§–æ—Ä–º–∞ —É—Å–ø–µ—à–Ω–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞!\n\n–î–∞–Ω–Ω—ã–µ:\n–ò–º—è: ${formData.firstName}\n–§–∞–º–∏–ª–∏—è: ${formData.lastName}\n–î–∞—Ç–∞ —Ä–æ–∂–¥–µ–Ω–∏—è: ${formData.birthDate}\n–§–∞–π–ª—ã: ${formData.files.length > 0 ? formData.files.join(', ') : '–ù–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ'}`);
                    
                    // –°–±—Ä–æ—Å —Ñ–æ—Ä–º—ã
                    form.reset();
                    uploadedFiles = [];
                    filePreviews.innerHTML = '';
                    mediaContainer.querySelector('.media-icon').textContent = 'üìÅ';
                    mediaContainer.querySelector('.media-placeholder').textContent = '–ü–µ—Ä–µ—Ç–∞—â–∏—Ç–µ —Å—é–¥–∞ —Ñ–æ—Ç–æ –∏–ª–∏ –≤–∏–¥–µ–æ, –ª–∏–±–æ –Ω–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É';
                    submitFormBtn.disabled = true;
                    confirmCheckbox.checked = false;
                    
                    // –°–±—Ä–æ—Å –¥–∞—Ç—ã
                    birthYearSelect.value = 2000;
                    birthDaySelect.value = 1;
                    document.getElementById('birthMonth').value = '1';
                    
                    // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
                    confirmModal.style.display = 'none';
                    
                    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–∏–º–∏—Ç–∞
                    validateForm();
                });
            });
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            let user = getUserData();
            if (user) {
                user = resetDailyCounterIfNeeded(user);
                user = updateUserSubscriptionLimits(user);
                updateUserUI(user);
                loadClickerData();
            } else {
                updateUserUI(null);
            }
        });
    </script>
</body>
</html>
